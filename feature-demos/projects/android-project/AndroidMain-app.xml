<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://ns.adobe.com/air/application/3.9">
    <id>com.tatsuyakoyama.krewdemo</id>
    <versionNumber>1.0</versionNumber>
    <filename>KrewDemo</filename>
    <initialWindow>
        <content>build/krewdemo-AIR.swf</content>
        <aspectRatio>portrait</aspectRatio>  <!-- or landscape -->
        <autoOrients>false</autoOrients>
        <fullScreen>true</fullScreen>
        <renderMode>direct</renderMode>
        <depthAndStencil>false</depthAndStencil>
    </initialWindow>
    <supportedProfiles>mobileDevice</supportedProfiles>

    <!-- SD カードに保存できるように -->
    <android>
      <manifestAdditions>
        <![CDATA[
                 <manifest android:installLocation="preferExternal"/>
        ]]>
      </manifestAdditions>
    </android>
</application>
